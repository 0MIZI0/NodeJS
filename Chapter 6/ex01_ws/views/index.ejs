<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>GIF 채팅방</title>
</head>
<body>
<div>F12를 눌러 console 탭과 network 탭을 확인하세요.</div>
<script>
  // 웹 소켓은 양방향 통신이기 때문에 클라이언트에서도 사용해야 한다.
  // 웹 소켓 코드
  const webSocket = new WebSocket("ws://localhost:3000"); // 연결할 서버 주소를 넣고 webSocket 객체 생성

  // 클라이언트 역시 이벤트 기반으로 동작한다.
  webSocket.onopen = function () {    // 서버와 연결이 맺어지는 경우 onopen 이벤트 리스너 호출
    console.log('서버와 웹소켓 연결 성공!');
  };

  webSocket.onmessage = function (event) {  // 서버로부터 메시지가 오는 경우 onmessage 이벤트 리스너 호출
    console.log(event.data);
    webSocket.send('클라이언트에서 서버로 답장을 보냅니다');
  };

</script>
</body>
</html> 